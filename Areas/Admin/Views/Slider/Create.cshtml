@using Pronia.ViewModels.Slider
@model SliderUpdateVM

<form asp-area="Admin"
      asp-controller="Slider"
      asp-action="Create"
      method="post"
      enctype="multipart/form-data"

>

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title"
               class="form-control"
               placeholder="Enter slider title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description"
                  class="form-control"
                  rows="3"
                  placeholder="Enter description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImageFile" class="form-label">Image </label>
        <input asp-for="ImageFile"
               class="form-control"
               placeholder="https://example.com/image.jpg" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="DiscountPercentage" class="form-label">Discount Percentage</label>
        <input asp-for="DiscountPercentage"
               type="number"
               class="form-control"
               min="0"
               max="100"
               placeholder="Enter discount %" />
        <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-area="Admin"
           asp-controller="Dashboard"
           asp-action="Index"
           class="btn btn-secondary">
            Cancel
        </a>
    </div>

</form>
