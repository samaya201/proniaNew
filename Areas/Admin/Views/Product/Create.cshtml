@using Pronia.ViewModels.ProductViewModels
@model ProductCreateVM

<div class="container ">
    <div class=" row">
        <h2>Create New Product</h2>

    </div>
    <form asp-area="Admin"
          asp-controller="Product"
          asp-action="Create"
          method="post"
          enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name"
                   class="form-control"
                   placeholder="Enter product name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description"
                      class="form-control"
                      rows="3"
                      placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MainImageFile" class="form-label">MainImageFile </label>
            <input asp-for="MainImageFile"
                   class="form-control"
                   placeholder="https://example.com/image.jpg" />
            <span asp-validation-for="MainImageFile" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="HoverImageFile" class="form-label"> HoverImage </label>
            <input asp-for="HoverImageFile"
                   class="form-control"
                   placeholder="Enter HoverImage " />
            <span asp-validation-for="HoverImageFile" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
        <label>Additional Images</label>
        <input asp-for="ProductImageFiles"
               type="file"
               multiple
               class="form-control" />
        </div>

        <div class="form-group mb-4">
            <label asp-for="Price" class="form-label"> Price</label>
            <input asp-for="Price"
                   type="number"
                   step="0.01"
                   class="form-control"
                   placeholder="Enter price" />

            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="SKU" class="form-label"> SKU</label>
            <input asp-for="SKU"
                   type="text"
                   class="form-control"
                   placeholder="Enter SKU" />

            <span asp-validation-for="SKU" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="CategoryId" class="form-label ">
                Category
            </label>

            <select asp-for="CategoryId" class="form-select ">
                <option value="" selected disabled>Choose a category</option>

                @foreach (Category category in ViewBag.Categories)
                {
                    <option value="@category.Id">
                        @category.Name
                    </option>
                }
            </select>

            <span asp-validation-for="CategoryId" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="BrandId" class="form-label ">
                Brand
            </label>

            <select asp-for="BrandId" class="form-select ">
                <option value="" selected disabled>Choose a brand</option>

                @foreach (Brand brand in ViewBag.Brands)
                {
                    <option value="@brand.Id">
                        @brand.Name
                    </option>
                }
            </select>

            <span asp-validation-for="BrandId" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="TagIds" class="form-label ">
                Tag
            </label>

            <select asp-for="TagIds" class="form-select ">
                @foreach (Tag tag in ViewBag.Tags)
                {
                    <option value="@tag.Id">
                        @tag.Name
                    </option>
                }
            </select>

            <span asp-validation-for="TagIds" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label for="exampleInputStar1">Rating (1–5)</label>
            <input asp-for="Rating"
                   type="number"
                   min="1"
                   max="5"
                   class="form-control"
                   placeholder="Enter star (1-5)">
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>




        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-area="Admin"
               asp-controller="Dashboard"
               asp-action="Index"
               class="btn btn-secondary">
                Cancel
            </a>
        </div>

    </form>

</div>
