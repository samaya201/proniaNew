@using Pronia.ViewModels.ProductViewModels
@model ProductGetVM

<style>
    .image-box {
        width: 100%;
        height: 180px;
        overflow: hidden;
        border-radius: 8px;
        background-color: #f5f5f5;
    }

        .image-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .additional-box {
        width: 90px;
        height: 90px;
        overflow: hidden;
        border-radius: 6px;
        background-color: #f5f5f5;
    }

        .additional-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>


<div class="container mt-4">
    <h2 class="mb-4">Product Detail (Admin Preview)</h2>

    <div class="row g-4">

        <!-- LEFT : IMAGES -->
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header fw-bold">
                    Product Images
                </div>

                <div class="card-body">
                    <div class="row g-3">

                        <!-- MAIN IMAGE -->
                        <div class="col-md-6">
                            <small class="fw-bold text-primary">Main Image</small>
                            <div class="image-box mt-1">
                                <img src="~/assets/images/website-images/@Model.MainImageUrl"
                                     alt="Main Image" />
                            </div>
                        </div>

                        <!-- HOVER IMAGE -->
                        <div class="col-md-6">
                            <small class="fw-bold text-warning">Hover Image</small>
                            <div class="image-box mt-1">
                                <img src="~/assets/images/website-images/@Model.HoverImageUrl"
                                     alt="Hover Image" />
                            </div>
                        </div>

                    </div>

                    <!-- ADDITIONAL IMAGES (UNDER MAIN & HOVER) -->
                    @if (Model.ProductImageUrls != null && Model.ProductImageUrls.Any())
                    {
                        <hr />
                        <h6 class="fw-bold text-success mb-2">Additional Images</h6>

                        <div class="d-flex gap-2 flex-wrap">
                            @foreach (var image in Model.ProductImageUrls)
                            {
                                <div class="additional-box">
                                    <img src="~/assets/images/website-images/@image"
                                         alt="Additional Image" />
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>


        <!-- RIGHT : PRODUCT INFO -->
        <div class="col-lg-5">
            <div class="card h-100">
                <div class="card-header fw-bold">
                    Product Information
                </div>

                <div class="card-body">
                    <h4 class="mb-2">@Model.Name</h4>

                    <p class="text-muted mb-1">
                        Category:
                        <strong>@Model.CategoryName</strong>
                    </p>

                    <p class="text-muted mb-1">
                        SKU:
                        <strong>@Model.SKU</strong>
                    </p>
                    <p class="text-muted mb-1">
                        Brand:
                        <strong>@Model.BrandName</strong>
                    </p>
                    <p class="fs-4 fw-bold text-success">
                        @Model.Price ₼
                    </p>


                    <p>
                        @Model.Description
                    </p>

                    <p>
                        Rating:
                        <strong>@Model.Rating</strong>
                    </p>

                    <!-- TAGS -->
                    @if (Model.Tags != null && Model.Tags.Any())
                    {
                        <div class="mt-2">
                            <h6>Tags</h6>
                            @foreach (var tag in Model.Tags)
                            {
                                <span class="badge bg-info text-dark me-1">
                                    @tag
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
