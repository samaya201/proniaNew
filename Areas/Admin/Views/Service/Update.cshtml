@model Service

<form asp-area="Admin"
      asp-controller="Service"
      asp-action="Update"
      method="post">

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title"
               class="form-control"
               placeholder="Enter service title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description"
                  class="form-control"
                  rows="4"
                  placeholder="Enter service description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="IconUrl" class="form-label">Icon URL</label>
        <input asp-for="IconUrl"
               class="form-control"
               placeholder="fa-solid fa-leaf OR https://icon-url" />
        <span asp-validation-for="IconUrl" class="text-danger"></span>
        <small class="text-muted">
            Example: <code>fa-solid fa-seedling</code>
        </small>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">
            Create
        </button>

        <a asp-area="Admin"
           asp-controller="Service"
           asp-action="Index"
           class="btn btn-secondary">
            Cancel
        </a>
    </div>

</form>
