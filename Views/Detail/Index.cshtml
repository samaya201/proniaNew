@model Pronia.ViewModels.ProductViewModels.ProductDetailVM

<main class="main-content">

    <!-- Breadcrumb -->
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="~/assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">@Model.Name</h2>
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>@Model.Name</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Area -->
    <div class="single-product-area section-space-top-100">
        <div class="container">
            <div class="row">

                <!-- LEFT: IMAGES -->
                <div class="col-lg-6">
                    <div class="single-product-img">
                        <div class="swiper-container single-product-slider">
                            <div class="swiper-wrapper">

                                <!-- MAIN IMAGE -->
                                <div class="swiper-slide">
                                    <a href="~/assets/images/website-images/@Model.MainImageUrl"
                                       class="single-img gallery-popup">
                                        <img class="img-full"
                                             src="~/assets/images/website-images/@Model.MainImageUrl"
                                             alt="@Model.Name" />
                                    </a>
                                </div>

                                <!-- EXTRA IMAGES -->
                                @foreach (var img in Model.ProductImages)
                                {
                                    <div class="swiper-slide">
                                        <a href="~/assets/images/website-images/@img"
                                           class="single-img gallery-popup">
                                            <img class="img-full"
                                                 src="~/assets/images/website-images/@img"
                                                 alt="@Model.Name" />
                                        </a>
                                    </div>
                                }

                            </div>
                        </div>

                        <!-- THUMBNAILS -->
                        <div class="thumbs-arrow-holder">
                            <div class="swiper-container single-product-thumbs">
                                <div class="swiper-wrapper">

                                    <a href="#" class="swiper-slide">
                                        <img class="img-full"
                                             src="~/assets/images/website-images/@Model.MainImageUrl"
                                             alt="@Model.Name" />
                                    </a>

                                    @foreach (var img in Model.ProductImages)
                                    {
                                        <a href="#" class="swiper-slide">
                                            <img class="img-full"
                                                 src="~/assets/images/website-images/@img"
                                                 alt="@Model.Name" />
                                        </a>
                                    }

                                </div>

                                <div class="thumbs-button-wrap d-none d-md-block">
                                    <div class="thumbs-button-prev">
                                        <i class="pe-7s-angle-left"></i>
                                    </div>
                                    <div class="thumbs-button-next">
                                        <i class="pe-7s-angle-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- RIGHT: PRODUCT INFO -->
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <div class="single-product-content">

                        <h2 class="title">@Model.Name</h2>

                        <div class="price-box">
                            <span class="new-price">$@Model.Price</span>
                        </div>

                        <!-- RATING -->
                        <div class="rating-box-wrap pb-4">
                            <div class="rating-box">
                                <ul>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Model.Rating)
                                        {
                                            <li><i class="fa fa-star"></i></li>
                                        }
                                        else
                                        {
                                            <li><i class="fa fa-star-o"></i></li>
                                        }
                                    }
                                </ul>
                            </div>
                            <div class="review-status">
                                <span>(@Model.Rating Review)</span>
                            </div>
                        </div>

                        <!-- DESCRIPTION -->
                        <p class="short-desc">
                            @Model.Description
                        </p>

                        <!-- CART -->
                        <ul class="quantity-with-btn">
                            <li class="quantity">
                                <div class="cart-plus-minus">
                                    <input class="cart-plus-minus-box" value="1" type="text" />
                                </div>
                            </li>
                            <li class="add-to-cart">
                                <a class="btn btn-custom-size lg-size btn-pronia-primary"
                                   href="#">
                                    Add to cart
                                </a>
                            </li>
                        </ul>

                        <!-- META -->
                        <div class="product-category">
                            <span class="title">SKU:</span>
                            <ul>
                                <li><a href="#">@Model.SKU</a></li>
                            </ul>
                        </div>

                        <div class="product-category">
                            <span class="title">Category:</span>
                            <ul>
                                <li><a href="#">@Model.CategoryName</a></li>
                            </ul>
                        </div>

                        <div class="product-category">
                            <span class="title">Brand:</span>
                            <ul>
                                <li><a href="#">@Model.BrandName</a></li>
                            </ul>
                        </div>

                        <div class="product-category product-tags">
                            <span class="title">Tags:</span>
                            <ul>
                                @foreach (var tag in Model.Tags)
                                {
                                    <li><a href="#">@tag</a></li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</main>
